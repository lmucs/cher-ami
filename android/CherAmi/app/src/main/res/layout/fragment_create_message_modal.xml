<RelativeLayout
xmlns:fbutton="http://schemas.android.com/apk/res-auto"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:padding="16dp"
xmlns:android="http://schemas.android.com/apk/res/android">

<EditText
    android:id="@+id/messageContent"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:hint="Enter Message"
    android:gravity="top"
    android:background="#00000000"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/imageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Image Url (Optional)"
        android:layout_below="@+id/messageContent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

<info.hoang8f.widget.FButton
    android:id="@+id/createMessageButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Create"
    android:textColor="@android:color/white"
    fbutton:buttonColor="#4cc1f0"
    fbutton:shadowEnabled="false"
    android:padding="20dp"
    android:layout_below="@+id/imageUrl"
    android:layout_alignParentStart="true" />

<info.hoang8f.widget.FButton
    android:id="@+id/dismissModalButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cancel"
    android:textColor="@android:color/white"
    fbutton:buttonColor="#ff0000"
    fbutton:shadowEnabled="false"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_below="@+id/imageUrl"
    android:layout_alignParentRight="true" />

</RelativeLayout>